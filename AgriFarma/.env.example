# AgriFarma Environment Configuration
# Copy this file to .env and configure your settings

# ===========================================
# APPLICATION SETTINGS
# ===========================================
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
DEBUG=True

# ===========================================
# DATABASE SETTINGS
# ===========================================
# SQLite (default for development)
DATABASE_URL=sqlite:///agrifarma.db

# For PostgreSQL in production:
# DATABASE_URL=postgresql://username:password@localhost:5432/agrifarma

# For MySQL:
# DATABASE_URL=mysql://username:password@localhost:3306/agrifarma

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
UPLOADED_MEDIA_DEST=uploads
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes

# ===========================================
# EMAIL SETTINGS (SMTP)
# ===========================================
# Set MAIL_SUPPRESS_SEND=False to enable real email sending

# Gmail Example:
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@agrifarma.local
MAIL_SUPPRESS_SEND=True  # Set to False to send real emails

# SendGrid Example:
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key
# MAIL_DEFAULT_SENDER=noreply@agrifarma.com

# Mailgun Example:
# MAIL_SERVER=smtp.mailgun.org
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=postmaster@your-domain.mailgun.org
# MAIL_PASSWORD=your-mailgun-password
# MAIL_DEFAULT_SENDER=noreply@agrifarma.com

# AWS SES Example:
# MAIL_SERVER=email-smtp.us-east-1.amazonaws.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-aws-smtp-username
# MAIL_PASSWORD=your-aws-smtp-password
# MAIL_DEFAULT_SENDER=noreply@agrifarma.com

# ===========================================
# INVENTORY SETTINGS
# ===========================================
LOW_INVENTORY_THRESHOLD=5

# ===========================================
# SESSION & SECURITY
# ===========================================
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ===========================================
# PRODUCTION SETTINGS (OPTIONAL)
# ===========================================
# WTF_CSRF_ENABLED=True
# PROPAGATE_EXCEPTIONS=True
